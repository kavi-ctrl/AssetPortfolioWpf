<UserControl x:Class="AssetPortfolioManager.Views.AddNewAssetPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetPortfolioManager.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="GhostWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="40">
            <TextBlock Text="Add New Asset" FontWeight="Bold" FontSize="26"
                       Foreground="DarkBlue" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1">
            <Border Background="WhiteSmoke" CornerRadius="10" Padding="20" 
            Width="400" HorizontalAlignment="Center" VerticalAlignment="Top"
            Margin="0,30,0,0" 
            BorderBrush="DarkBlue" BorderThickness="2" >
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Asset Name" FontWeight="SemiBold" Margin="30 0 0 0"/>
                    <TextBox Width="200" Margin="110 -15 0 15" Text ="{Binding AssetName, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Asset Type" FontWeight="SemiBold" Margin="30 0 0 0"/>
                    <ComboBox Width="200" Margin="110 -15 0 15" ItemsSource="{Binding AssetTypes}"
                              SelectedItem="{Binding AssetType, Mode=TwoWay}" IsEditable="False"/>
                    
                    <TextBlock Text="Quantity" FontWeight="SemiBold" Margin="30 0 0 0"/>
                    <TextBox Width="200" Margin="110 -15 0 15" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Price" FontWeight="SemiBold" Margin="30 0 0 0"/>
                    <TextBox Width="200" Margin="110 -15 0 15" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <Button Content="Save" FontWeight="SemiBold" Background="DarkBlue"
                    Foreground="White" Height="30" 
                    Width="50" Padding="6" Margin="-70 0 0 0" Command="{Binding SaveCommand}"/>
                    <Button Content="Back" FontWeight="SemiBold" Height="30" Width="50"
                    Padding="6"  Background="DarkBlue" Foreground="White"
                    Margin="80 -30 0 0" Command="{Binding BackCommand}"/>
                </StackPanel>
            </Border>
            
        </Grid>
    </Grid>
</UserControl>
