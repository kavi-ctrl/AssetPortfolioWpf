<UserControl x:Class="AssetPortfolioManager.Views.AllAssetViewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:viewmodels="clr-namespace:AssetPortfolioManager.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    <Grid Background="GhostWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="40">
            <TextBlock Text="All Asset Data" FontWeight="Bold" FontSize="26"
                       Foreground="DarkBlue" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Refresh" Command="{Binding RefreshCommand}" FontWeight="Bold" FontSize="15" Height="30" Width="80"
                    Background="DarkBlue" BorderBrush="DarkBlue" Foreground="White"
                    VerticalAlignment="Top" Margin="200 2 0 10" Padding="1"/>
            <Button Grid.Row="0" Content="Add Asset" Command="{Binding AddCommand}" FontWeight="Bold" FontSize="15" Height="30" Width="80"
                    Background="DarkBlue" BorderBrush="DarkBlue" Foreground="White"
                    VerticalAlignment="Top" Margin="400 2 0 10" Padding="1"/>
            <Button Grid.Row="0" Content="Import Excel" Command="{Binding ImportCommand}" 
                    FontWeight="Bold" FontSize="15" Height="30" Width="100"
                    Background="DarkBlue" BorderBrush="DarkBlue" Foreground="White"
                    VerticalAlignment="Top" Margin="620 2 0 10" Padding="1"/>
            <Button Grid.Row="0" Content="Download" Command="{Binding ExportCommand}" 
                    CommandParameter="{Binding ElementName=AssetGrid}"
                    FontWeight="Bold" FontSize="15" Height="30" Width="85"
                    Background="DarkBlue" BorderBrush="DarkBlue" Foreground="White"
                    VerticalAlignment="Top" Margin="850 2 0 10" Padding="1" />
            <Border Grid.Row="1" Height="497" Width="948" BorderThickness="5" BorderBrush="DarkBlue"
                    CornerRadius="10" Background="GhostWhite" HorizontalAlignment="Center"
                    VerticalAlignment="Top" Padding="10" Margin="0 0 0 0">
                       <Grid>
                    <dxg:GridControl x:Name="AssetGrid" ItemsSource="{Binding AssetData}" AutoGenerateColumns="None">
                                <dxg:GridControl.Columns>
                                    <dxg:GridColumn FieldName="AssetName"  Header="Asset Name" />
                                    <dxg:GridColumn FieldName="AssetType"  Header="Asset Type" />
                                    <dxg:GridColumn FieldName="Quantity"  Header="Quantity" />
                                    <dxg:GridColumn FieldName="Price"  Header="Price" />
                                    <dxg:GridColumn FieldName="LastUpdated"  Header="LastUpdated" />
                                    <dxg:GridColumn Header="Actions" Width="100">
                                        <dxg:GridColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Command="{Binding DataContext.EditCommand, 
                                                RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                    CommandParameter="{Binding RowData.Row }"
                                                    Height="18" Width="18" Padding="1" Margin="10 0 5 0">
                                                        <Image Source="E:\c_sharp\Wpf\Images\Edit.png" Stretch="Fill"/>
                                                    </Button>
                                                    <Button Command="{Binding DataContext.DeleteCommand, 
                                                RelativeSource={RelativeSource AncestorType=dxg:GridControl}}"
                                                    CommandParameter="{Binding RowData.Row }"
                                                    Height="18" Width="18" Padding="1" Margin="10 0 5 0">
                                                        <Image Source="E:\c_sharp\Wpf\Images\Delete.png" Stretch="Fill"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </dxg:GridColumn.CellTemplate>
                                    </dxg:GridColumn>
                                </dxg:GridControl.Columns>
                                <dxg:GridControl.View>
                                    <dxg:TableView AutoWidth="True" ShowSearchPanelMode="Never"
                                           AllowEditing="False" ShowGroupPanel="False"
                                           HorizontalScrollbarVisibility="Auto" MinHeight="70"/>
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                    <dx:WaitIndicator Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}" DeferedVisibility="True" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Panel.ZIndex="100"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
